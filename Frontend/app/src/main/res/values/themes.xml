<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UtilitatemMetris" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BigGeneralButtonText" parent="Theme.UtilitatemMetris">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_giant_32</item>
    </style>

    <style name="TextFieldBoxesStyle"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    </style>

    <style name="TabsTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextFieldBoxesExtendedEditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/text_default_16</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>